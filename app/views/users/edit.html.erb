<% provide :title, t("static_pages.home.edituser") %>
<h1><%= t "static_pages.home.update_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("static_pages.home.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("static_pages.home.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("static_pages.home.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("static_pages.home.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("static_pages.home.save"), class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"><%= t("static_pages.home.change") %></a>
    </div>
  </div>
</div>
